{
  "name": "cdm-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux deb",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.stevehong.cdm",
    "productName": "Custom Download Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!.vscode/",
      "!node_modules/*/{CHANGELOG.md,LICENSE.md,README.md,README,.editorconfig,.eslintrc,.flowconfig,.prettierrc,.travis.yml,appveyor.yml,.gitlab-ci.yml,.yarnrc,.browserslistrc,.travis.yml}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map",
      "!node_modules/**/.*",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.{js,ts}.map",
      "!node_modules/**/*.ts",
      "!node_modules/electron",
      "!node_modules/electron-builder",
      "!node_modules/electron-packager",
      "!node_modules/@electron/rebuild",
      "!cdm-linux-build.log"
    ],
    "compression": "maximum",
    "linux": {
      "target": ["deb"],
      "category": "Network",
      "executableName": "cdm-app",
      "icon": "icons/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
